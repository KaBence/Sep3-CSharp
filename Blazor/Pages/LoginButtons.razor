@using Blazor.Services
@namespace Login
@inject NavigationManager navMgr
@inject IAuthService authService


<AuthorizeView>
    <Authorized>
        <img class="icon" src="icons/Logout.png" @onclick="Logout"/>
    </Authorized>
    <NotAuthorized>
        <img class="icon" src="icons/Login.png" @onclick="Login"/>
    </NotAuthorized>
</AuthorizeView>


@code {
    [Parameter]
    public EventCallback onChange { get; set; }

    private void Login()
    {
        navMgr.NavigateTo("/Login");
    }

    private async Task Logout()
    {
        await authService.LogoutAsync();
        navMgr.NavigateTo("/");
    }

    private bool OpenBasket()
    {
        return false;
    }
    
}