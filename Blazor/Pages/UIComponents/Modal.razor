@namespace UIComponents

@if (ShowModal)
{
    <div class="modal-background" @onclick="close" style="display:block; height: 100%">
        <div class="modal-box">

            @ChildContent

        </div>
    </div>
}

@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; } = null!;
    
    [Parameter]
    public bool ShowModal { get; set; }

    private void close()
    {
        ShowModal = false;
    }
}