        if (x.Length != 3)
        {
            return "9999-12-12";
        }
        return x[2] + "-" + x[1] + "-" + x[0];
        */
    }
    
    private DateTime setDate(string date)
    {
        string[] x = date.Split("-");
        Console.WriteLine(x.Length);
       
        return new DateTime(int.Parse(x[0]), int.Parse(x[1]), int.Parse(x[2]));

    }

}